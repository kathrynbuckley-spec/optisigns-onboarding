{
  "name": "optisigns-onboarding-monorepo",
  "version": "1.0.0",
  "description": "OptiSigns Onboarding Application - Full Stack Monorepo - Deploy using app.yaml",
  "private": true,
  "digitalocean": {
    "spec": "app.yaml"
  },
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm start",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm install --production",
    "build": "npm run build:backend && npm run build:frontend",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npx http-server dist/frontend/browser -p 4200",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "seed": "cd backend && npm run seed",
    "test:frontend": "cd frontend && npm test",
    "clean": "rm -rf node_modules frontend/node_modules backend/node_modules frontend/dist backend/dist",
    "deploy:prepare": "./deploy-to-digitalocean.sh"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kathrynbuckley-spec/optisigns-onboarding.git"
  },
  "keywords": [
    "optisigns",
    "onboarding",
    "angular",
    "express",
    "mongodb",
    "digital-ocean"
  ],
  "author": "",
  "license": "MIT"
}
